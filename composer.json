{
    "name": "tower/tower",
    "description": "The Tower Framework",
     "keywords": ["framework", "tower" , "high performance"],
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Amir",
            "email": "faramarzii.amir@gmail.com"
        }
    ],
    "require": {
        "php" : ">=8.0",
        "workerman/workerman": "^4.0",
        "illuminate/database": "^8.40",
        "illuminate/pagination": "^8.40",
        "symfony/polyfill-ctype": "^1.8",
        "predis/predis": "^1.1"
    } ,
    "autoload": {
        "psr-4": {
            "App\\" : "app/" ,
            "Core\\" : "core/"
        } ,
        "files": [
            "core/helpers.php"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
